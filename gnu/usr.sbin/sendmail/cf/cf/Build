#
#  A quick-and-dirty script to create cf files.
#

SMROOT=${SMROOT-../..}
BUILDTOOLS=${BUILDTOOLS-$SMROOT/devtools}

M4=`sh $BUILDTOOLS/bin/find_m4.sh`
ret=$?
if [ $ret -ne 0 ]
then
	exit $ret
fi
echo "Using M4=$M4"

eval exec ${MAKE-make} M4=$M4 $*
