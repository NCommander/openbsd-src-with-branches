#!/bin/csh -f

# usage: prepend file string1 ... stringn 
#

if ($#argv < 2) then 
echo incorrect usage ; exit 1;
endif

set FILE = $1; shift;
set TMP = /tmp/prepend.$$

if (!(-r $FILE)) then
echo file $FILE not found ; exit 1;
endif

set DUMMY = 0

while ($DUMMY < $#argv)
@ DUMMY++
echo "$argv[$DUMMY]" >>& $TMP
end

cat $FILE >> $TMP

cp $TMP $FILE

rm -f $TMP

