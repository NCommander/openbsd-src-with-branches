ENTRY(_start)

PHDRS
{
	text PT_LOAD;
	dynamic PT_DYNAMIC;
}

SECTIONS
{
	. = 0x00100000;
	.text :
	{
		*(.text)
		*(.rodata*)
	} :text
	PROVIDE (etext = .);
	PROVIDE (_etext = .);

	.hash : { *(.hash) }

	. = ALIGN(4096);
	.data :
	{
		*(.data)
	}

	. = ALIGN(4096);
	.got : { *(.got) }
	.toc : { *(.toc) }

	PROVIDE (__bss_start = .);
	.bss :
	{
		*(.bss)
	}
	PROVIDE (end = .);
	PROVIDE (_end = .);
}
