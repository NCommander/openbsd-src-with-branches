use strict;
use warnings;
use File::Path;

my $root = $ENV{'ROOT'};

File::Path::make_path("$root/pkgdb");

$ENV{'PKG_DBDIR'} = "$root/pkgdb";

my @args = ('-F', 'nonroot', '-B', $root, @ARGV);
my $prog;
if ($ENV{'DEBUG'}) {
	unshift(@args, 'perl', '-d', '/usr/sbin/pkg_add', '-F', 'debug');
	$prog = 'perl';
} else {
	unshift(@args, 'pkg_add');
	$prog = 'pkg_add';
}
print join(' ', @args), "\n" if $ENV{'VERBOSE'};

exec {$prog} @args;
