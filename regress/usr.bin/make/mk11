# $OpenBSD: mk11,v 1.1 2001/05/15 13:40:02 espie Exp $


V=text
A=
B=zoinx42->=hop

a:
# we want empty substitutions to work correctly
	@echo ${V:C/^$A//}
	@echo ${V:C/$A$//}
	@echo ${V:C/^${A}//}
	@echo ${V:C/${A}$//}
# with replacement text too
	@echo ${V:C/^$A/1/}
	@echo ${V:C/$A$/1/}
	@echo ${V:C/^${A}/1/}
	@echo ${V:C/${A}$/1/}
# and with substituted text...
	@echo ${V:C/^$A/1&/}
	@echo ${V:C/$A$/1&/}
	@echo ${V:C/^${A}/1&/}
	@echo ${V:C/${A}$/1&/}
# Yet another check
	@echo "${B:C/([a-z]*)/\1&/}"
