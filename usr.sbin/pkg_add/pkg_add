use strict;
use warnings;

sub run
{
	my ($cmd, $name) = @_;
	my $module = "OpenBSD::Pkg\u$cmd";
	eval "require $module;";
	if ($@) {
		die $@;
	}
	exit($module->parse_and_run($name));
}
my @l = qw(add check create delete info);

for my $i (@l) {
	if ($0 =~ m/\/?pkg_$i$/) {
		run($i, "pkg_$i");
	}
}

# defaults to pkg_info personality but keeps the command name
run('info', $0);
