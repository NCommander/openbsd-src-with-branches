{  dup dup dup dup
   0 0 moveto xsize 0 lineto
   0 exch -3 mul moveto
   3 mul xsize add exch -3 mul lineto
   3 mul xsize add 0 lineto
   setlinewidth 0 setlinejoin 2 setlinecap stroke
} def

% linewidth ltabvs -
% vertical single line
